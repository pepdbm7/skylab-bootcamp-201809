extends layout
block content
  div.space-background
    div.container
      div.content
        h2.title REGISTER
        form.form-signin(action='/register', method='POST')
          input.form-control(type='text', name='name', placeholder='Name')
          input.form-control(type='text', name='surname', placeholder='Surname')
          input.form-control(type='text', name='username', placeholder='Username')
          input.form-control(type='password', name='password', placeholder='Password')
          button.btn.btn-lg.btn-dark.btn-inline-block(type='submit') Register
        if error
          p(class='error') #{error}
        a.goBack(href='/') go back