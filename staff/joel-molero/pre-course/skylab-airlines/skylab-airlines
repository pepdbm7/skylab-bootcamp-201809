function cons(id, to, from, cost, scale) {
    this.id = id;
    this.to = to;
    this.from = from;
    this.cost = cost;
    this.scale = scale;
};


function adFlight(id, to, from, cost, scale){
var newFlight = new cons (id, to, from, cost, scale);
