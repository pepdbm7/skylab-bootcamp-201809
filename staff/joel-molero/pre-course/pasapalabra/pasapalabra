var check = [];
var aciertos = 0;
var errores = 0;
var vacio = 0;
var playername = "";
var rankings = ["Bot Gabe: 17 aciertos | 10 errores"];
console.log("Rankings: "+rankings);

function winCondition(status){
    check = [];
    for (i=0;i<questions.length;i++){
    check.push(questions[i].status)
    }
    return status > 0;
};

function pasapalabra(){
var playerName = prompt("Nombre del jugador?");
setTimeout(function(){ alert("Tiempo finalizado!"); console.log("Tienes "+aciertos+" aciertos, "+errores+" errores y "+vacio+ " sin contestar."); return; }, 130000);
winCondition();
while (check.every(winCondition)===false){
    for (x=0;x<questions.length;x++){
    if (questions[x].status === 0){
        var question = prompt(questions[x].question).toLowerCase()
        if (question === questions[x].answer){
        questions[x].status = 1;
        }
        else if (question === "pasapalabra"){
        questions[x].status = 0;
        }
        else {
        questions[x].status = 2;
        }    
    }
    else {;}
}   
}
puntos();
console.log("Has completado el rosco con "+aciertos+" aciertos y "+errores+" errores.");
rankings.push(playerName+": "+aciertos+" aciertos | "+errores+" errores");
clearTimeout();
return;
}

function puntos(){
for (i=0;i<check.length;i++){
    if(check[i] == 1){
        aciertos++;
    }
    else if(check[i] == 2){
        errores++;
    }
    else if(check[i] == 0){
        vacio++;
    }
}
};
